doctype html
html
  head
    meta[content="text/html; charset=UTF-8" http-equiv="Content-Type"]
  body
    h3
      |Нове замовлення #{@array[:info][:orderway]}
    h4
      -if @array[:info][:orderway] == "Кур'єр"
        =@array[:info][:name]
        =@array[:totalprice]
        =@array[:info][:promocode]
        =@array[:info][:phone]
        =@array[:info][:email]
        =@array[:info][:street]
        =@array[:info][:building]
        =@array[:info][:apt_number]
        =@array[:info][:date]
        =@array[:info][:time]
        =@array[:info][:paymentmethod]
        =@array[:info][:sumchange]
        =@array[:info][:comment]
      - elsif @array[:info][:orderway]=="Забрати самому"
        =@array[:info][:name]
        =@array[:totalprice]
        =@array[:info][:promocode]
        =@array[:info][:phone]
        =@array[:info][:email]
        =@array[:info][:officeaddress]
        =@array[:info][:date]
        =@array[:info][:time]
        =@array[:info][:comment]
      - else
        =@array[:info][:phone]
        =@array[:totalprice]
        =@array[:info][:promocode]
      - @list.each do |s|
        =s[:name]
        =s[:price]
        =s[:qnty]
        -if s[:bonus]
          = s[:bonus][:name]
          = s[:bonus][:attribute]