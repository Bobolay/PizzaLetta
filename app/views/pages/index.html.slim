/ SOCIAL AND FEEDBACKS
.social-wrap
  .label
    = inline_svg ('icons/logo.svg')
  .row
    .columns
      / Title and social buttons
      .main-text
        p.large-title Follow us
        p.smaller Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
        .btn.dark
          = inline_svg ("icons/instagram.svg")
          span #pizzaletta
        .btn.dark
          = inline_svg ("icons/instagram.svg")
          span #lovemypizza
  .row.columns-left

    / Post from socials
    -@json.each do |json|
      .columns.medium-6.large-4
        .square
          a.img-bg href="#{json["link"]}" rel="nofollow" style="background-image: url(#{json["images"]["standard_resolution"]["url"]})"
        span.heart-icon = inline_svg "icons/heart.svg"
        span.likes =json["likes"]["count"]
        p.title =json["user"]["username"]
        p.smaller =json["caption"]["text"]
