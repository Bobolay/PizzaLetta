/ PIZZA LIST
.indent.item-list.mix-container ng-controller="PizzaListCtrl"
  .row.columns-left

    .columns.medium-6.large-4.mix ng-repeat="(index, pizza) in pizza_list" class="{{pizza.category}}"

      .square
        .fullsize.item

          / img size: 500x500#
          .img-bg style="background-image: url(#{asset_path('assets/img/items/{{pizza.imgUrl}}')})"

          .info-panel.white

            p.name
              | {{pizza.name}}
            ul.ingredients
              li ng-repeat="ingredient in pizza.ingredients"
                | {{ingredient.name}}
            .add-ingredient-btn ng-click="addCustomPizza(pizza)"
              span = inline_svg "icons/plus.svg"
              | додати інгредієнт

            .red-price.small-circle ng-class="{reduced: pizza.discount}"
              .inner-text
                span ng-if="pizza.discount"
                  | {{pizza.discount}}
                span &#8372
                span.price
                  | {{pizza.price}}

                / For version 2.0 (size)
                /.price ng-show="size == 'small'"
                /  | {{pizza.price[0]}}
                /.price ng-show="size == 'big'"
                /  | {{pizza.price[1]}}

            / For version 2.0 (size)
            /.size-option id="pizza-{{i+1}}"
            /  .clearfix
            /    label.floated
            /      input type="radio" name="size-{{index+1}}" value="small" ng-model="size"
            /      .checkmark 30
            /    label.floated
            /      input type="radio" name="size-{{index+1}}" value="big" ng-model="size" ng-checked="true"
            /      .checkmark 40

            .add-to-cart

              .quantity.on-red-bg
                .decrease ng-click="decrease(pizza)"
                  = inline_svg "icons/remove.svg"
                .number ng-bind="pizza.qnty"
                .increase ng-click="increase(pizza)"
                  = inline_svg "icons/add.svg"

              .add-to-cart-btn ng-click="addToCart(pizza)" add to cart

              .total-price
                span &#8372
                | {{pizza.qnty * pizza.price}}

              .success-message
                span = inline_svg "icons/done.svg"


